# LLM Provider for ATS check step (free tier, default: gemini)
LLM_PROVIDER=gemini

# Writing LLM for quality-critical steps: resume tailor, ATS edits, Q&A/cover letter
# Fallback chain: deepseek → openrouter → anthropic → gemini
# Cost: DeepSeek ~$0.005/app | OpenRouter/Qwen3.5 ~$0.014/app | Anthropic/Haiku ~$0.06/app
WRITING_PROVIDER=deepseek

# Free tier API keys
GEMINI_API_KEY=your_gemini_key          # https://aistudio.google.com/apikey (free, ~250 RPD)
GROQ_API_KEY=your_groq_key              # https://console.groq.com (free)
SAMBANOVA_API_KEY=your_sambanova_key    # https://cloud.sambanova.ai (free)

# Paid writing provider API keys (add whichever you want in the fallback chain)
DEEPSEEK_API_KEY=your_deepseek_key      # https://platform.deepseek.com/api_keys
OPENROUTER_API_KEY=your_or_key          # https://openrouter.ai/keys
ANTHROPIC_API_KEY=your_anthropic_key    # https://console.anthropic.com

# Notion Integration
NOTION_TOKEN=your_notion_token
NOTION_APPLICATIONS_DB_ID=your_db_id
NOTION_MASTER_RESUME_ID=your_resume_page_id
NOTION_QA_TEMPLATES_DB_ID=your_qa_db_id
NOTION_SKILLS_KEYWORDS_DB_ID=your_skills_db_id

# Applicant Info (for forms)
APPLICANT_NAME=Your Name
APPLICANT_EMAIL=your@email.com
APPLICANT_PHONE=+1234567890
APPLICANT_LINKEDIN=https://linkedin.com/in/yourprofile
APPLICANT_LOCATION=City, Country
