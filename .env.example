# LLM Provider (gemini, groq, or sambanova)
LLM_PROVIDER=gemini

# API Keys (only need one provider)
GEMINI_API_KEY=your_gemini_key          # https://aistudio.google.com/apikey
GROQ_API_KEY=your_groq_key              # https://console.groq.com
SAMBANOVA_API_KEY=your_sambanova_key    # https://cloud.sambanova.ai

# Notion Integration
NOTION_TOKEN=your_notion_token
NOTION_APPLICATIONS_DB_ID=your_db_id
